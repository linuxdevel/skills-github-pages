name: Example Workflow

on:
  workflow_dispatch:
    inputs:
      name:
        description: 'Name of the user'
        required: false
        default: 'World'
      greeting:
        description: 'Greeting message'
        required: false
        default: 'Hello'

jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
       matrix:
          os: [ubuntu-latest, windows-latest]
        node: [1, 2, 3]
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Print greeting
      run: echo "${{matrix.os}} ${{matrix.node}} ${{ github.event.inputs.greeting }} ${{ github.event.inputs.name }}!"
